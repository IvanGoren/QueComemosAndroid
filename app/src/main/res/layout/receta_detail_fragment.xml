<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal">
        <TextView android:layout_width="wrap_content" style="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content" android:text="Dificultad:"/>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/receta_dificultad"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        tools:context=".RecetaDetailFragment" />
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
        style="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content"
        android:text="Temporada:"/>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/receta_temporada"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        tools:context=".RecetaDetailFragment" />
    </LinearLayout>

    <TextView android:layout_width="wrap_content"
    style="?android:attr/textAppearanceLarge"
    android:layout_height="wrap_content" android:text="Lista de ingredientes:"/>
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/receta_ingredientes"
    style="?android:attr/textAppearanceMedium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textIsSelectable="true"
    tools:context=".RecetaDetailFragment" />

    <ListView
    android:id="@+id/list_ingredientes"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8px"/>

        <TextView android:layout_width="wrap_content"
        style="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content" android:text="Lista de condimentos:"/>
        <ListView
        android:id="@+id/list_condimentos"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
        style="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content" android:text="Condiciones permitidas:"/>

        <ListView
        android:id="@+id/list_condiciones_preexistentes"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
        style="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content"
        android:text="Pasos de preparaciÃ²n:"/>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/receta_isntrucciones"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        tools:context=".RecetaDetailFragment" />

</LinearLayout>